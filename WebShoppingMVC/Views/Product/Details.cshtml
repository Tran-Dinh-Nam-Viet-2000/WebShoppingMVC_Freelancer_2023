@model WebShoppingMVC.Domain.Entity.Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}
    <style>
        .buy-addtocart {
            display: flex;
            flex-direction: row;
        }

    .buy {
        margin-right: 10px;
    }

    .add-to-cart{
        width: 109px;
        padding-bottom: 0px;
        padding: 13px;
    }

    </style>

    <!-- ***** Main Banner Area Start ***** -->
    <div style="width: 1470px; margin-left: -180px;" class="page-heading" id="top">
    @*<div style="width: 1711px; margin-left: -298px;" class="page-heading" id="top">*@
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Single Product Page</h2>
                        <span>SECO Shop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->
<!-- ***** Product Area Starts ***** -->
<section class="section" id="product">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="left-images">
                    <img style="margin-top: -40px; width: 400px; height: 400px; margin-left: 119px" src="@Model.Image" alt="">
                </div>
            </div>
            <div style="margin-left: -100px" class="col-lg-4">
                <div class="right-content">
                    <h4>@Model.Name</h4>
                    <span class="price">@Model.Price VNĐ</span>
                    <ul class="stars">
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                    </ul>
                    <span>@Model.Description</span>
                    <div class="quantity-content">
                        <div class="left-content">
                            <h6>No. of Orders</h6>
                        </div>
                        <div class="right-content">
                            <div class="quantity buttons_added">
                                <input type="button" value="-" class="minus"><input type="number" step="1" min="1" max="" name="quantity" value="1" title="Qty" class="input-text qty text" size="4" pattern="" inputmode=""><input type="button" value="+" class="plus">
                            </div>
                        </div>
                    </div>
                    <div class="total">
                        <div class="buy-addtocart">
                            <div style="margin-left: 82px;" class="buy main-border-button"><a href="#">Buy Now</a></div>
                            <div class="main-border-button"><a style="width: 109px;padding: 12px; text-align: center;" href="#">Add to Cart</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Product Area Ends ***** -->


